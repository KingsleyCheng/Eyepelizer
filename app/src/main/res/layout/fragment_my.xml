<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ig_profile_photo_default" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_image"
        android:id="@+id/herad_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="qzuser" />

    <LinearLayout
        android:layout_below="@id/herad_name"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:id="@+id/my_message_and_search"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_compact_favourite_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏" />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_compact_favourite_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的评论" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/my_cache"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_below="@id/my_message_and_search"
        android:text="我的缓存"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_below="@id/my_cache"
        android:text="退出登录"/>



</RelativeLayout>